@model ChessSharp.Web.Models.CreateChallengeViewModel

@{
    ViewBag.Title = "Challenge";
}

<h2>Challenge</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.OpponentId, new { @class = "control-label col-md-2" })
            <div>
                @Html.DropDownListFor(model => model.OpponentId, Model.Players.Select(p => new SelectListItem()
                    {
                        Selected = false,
                        Text = p.Name,
                        Value = p.PlayerId
                    }), "Please select an opponent...")
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IsPlayerDark, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IsPlayerDark)
                @Html.ValidationMessageFor(model => model.IsPlayerDark)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ChallengeTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ChallengeTitle)
                @Html.ValidationMessageFor(model => model.ChallengeTitle)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
